%p#notice= notice
%h1 Listing Lists
%table.table.table-striped.table-bordered
  %thead
    %tr
      %th Name
      %th List id
      %th Actions
  %tbody
    - @lists.each do |list|
      %tr
        %td
          = list.name
        %td
          = list.id
        %td
          .btn-group
            = link_to 'Show', my_list_path(list), class: "btn btn-primary"
            = link_to 'Edit', edit_my_list_path(list), class: "btn btn-warning"
            = link_to 'Destroy', my_list_path(list), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"
%br/

= link_to 'New List', new_my_list_path, class: "btn btn-default"
